		[					; disyllaba
			contour	 f/+4:-4	word   syll
			contour	 f/-3:-3	word   syll
		]
		[					; trisyllaba
			contour	 f/-4:+4:-6	word   syll
			contour	 f/-4:+0:-4	word   syll
			contour	 f/-2:-3:-3	word   syll
		]
		[					; tetrasyllaba
			contour	 f/-3:+0:-2:-3	word   syll
